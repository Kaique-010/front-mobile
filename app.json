{
  "expo": {
    "name": "SpsMobile",
    "slug": "front-mobile-sps",
    "version": "1.0.1",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "black"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.leokaique.SpsMobile",
      "infoPlist": {
        "NSCameraUsageDescription": "Este aplicativo precisa de permissão para usar a câmera para escanear códigos de barras.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "package": "com.leokaique.SpsMobile",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "black"
      },
      "permissions": ["CAMERA"]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-font",
      [
        "expo-camera",
        {
          "cameraPermission": "Permitir acesso à câmera",
          "microphonePermission": "Permitir acesso ao microfone",
          "recordAudioAndroid": false
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "f67c96b2-c0c0-466a-b244-fe205b575bef"
      }
    }
  }
}
